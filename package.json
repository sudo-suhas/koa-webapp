{
    "name": "koa-webapp",
    "version": "0.0.1",
    "description": "Basic Koa webapp with sessions, cookies, authentication and pug.",
    "scripts": {
        "start": "better-npm-run start",
        "dev": "better-npm-run dev",
        "postinstall": "node -e \"var s='../src',d='node_modules/src',fs=require('fs');fs.exists(d,function(e){e||fs.symlinkSync(s,d,'dir')});\"",
        "eslint": "./pre-commit-eslint.sh",
        "lint": "eslint src",
        "lint:fix": "npm run lint -- --fix",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "betterScripts": {
        "start": {
            "command": "node ./bin/www | bunyan",
            "env": {
                "NODE_ENV": "development"
            }
        },
        "dev": {
            "command": "nodemon --debug ./bin/www | bunyan",
            "env": {
                "NODE_ENV": "development",
                "DEBUG": "webapp:*"
            }
        }
    },
    "pre-commit": [
        "eslint"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://skahrs@bitbucket.org/gogaxxe/webapp.git"
    },
    "author": "Suhas Karanth <sudo.suhas@gmail.com>",
    "license": "ISC",
    "homepage": "https://bitbucket.org/gogaxxe/webapp#readme",
    "dependencies": {
        "babel-plugin-transform-async-to-generator": "^6.8.0",
        "babel-register": "^6.14.0",
        "bcrypt": "^0.8.7",
        "better-npm-run": "0.0.11",
        "bluebird": "^3.4.6",
        "bunyan": "^1.8.1",
        "debug": "^2.2.0",
        "fs-extra": "^0.30.0",
        "knex": "^0.12.5",
        "koa": "^2.0.0-alpha.7",
        "koa-bodyparser": "^3.2.0",
        "koa-bunyan-logger": "^2.0.0-pre1",
        "koa-convert": "^1.2.0",
        "koa-generic-session": "^1.11.3",
        "koa-helmet": "^2.0.0",
        "koa-onerror": "^2.0.0",
        "koa-passport": "^3.0.0-rc.1",
        "koa-redis": "^2.1.2",
        "koa-router": "^7.0.1",
        "koa-static": "^3.0.0",
        "koa-views": "^5.0.2",
        "lodash": "^4.16.4",
        "mysql2": "^1.1.0",
        "passport-local": "^1.0.0",
        "pug": "^2.0.0-beta6",
        "redis": "^2.6.2"
    },
    "devDependencies": {
        "eslint": "^3.7.0",
        "eslint-plugin-promise": "^2.0.0",
        "pre-commit": "^1.1.3"
    }
}
