{
  "name": "koa-webapp",
  "version": "0.0.1",
  "description": "Basic Koa webapp with sessions, cookies, authentication and pug.",
  "scripts": {
    "start": "better-npm-run start",
    "dev": "better-npm-run dev",
    "staging": "better-npm-run staging",
    "prod": "better-npm-run prod",
    "postinstall": "node -e \"var s='../src',d='node_modules/src',fs=require('fs');fs.exists(d,function(e){e||fs.symlinkSync(s,d,'dir')});\"",
    "eslint": "./pre-commit-eslint.sh",
    "lint": "eslint src public",
    "lint:fix": "npm run lint -- --fix",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "betterScripts": {
    "start": {
      "command": "node ./bin/www | bunyan",
      "env": {
        "NODE_ENV": "development"
      }
    },
    "dev": {
      "command": "nodemon --debug ./bin/www | bunyan",
      "env": {
        "NODE_ENV": "development",
        "DEBUG": "webapp:*,knex:query,koa:*,koa-static,koa-ratelimit"
      }
    },
    "staging": {
      "command": "node ./bin/www | bunyan",
      "env": {
        "NODE_ENV": "staging"
      }
    },
    "prod": {
      "command": "node ./bin/www | bunyan",
      "env": {
        "NODE_ENV": "production"
      }
    }
  },
  "pre-commit": [
    "eslint"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sudo-suhas/koa-webapp.git"
  },
  "author": "Suhas Karanth <sudo.suhas@gmail.com>",
  "license": "ISC",
  "homepage": "https://github.com/sudo-suhas/koa-webapp#readme",
  "dependencies": {
    "babel-plugin-transform-async-to-generator": "^6.8.0",
    "babel-register": "^6.14.0",
    "bcrypt": "^0.8.7",
    "better-npm-run": "0.0.11",
    "bluebird": "^3.4.6",
    "bunyan": "^1.8.1",
    "debug": "^2.2.0",
    "dot": "^1.0.3",
    "fs-extra": "^0.30.0",
    "joi": "^9.2.0",
    "knex": "^0.12.5",
    "koa": "^2.0.0-alpha.7",
    "koa-bodyparser": "^3.2.0",
    "koa-bunyan-logger": "^2.0.0-pre1",
    "koa-compress": "^2.0.0",
    "koa-convert": "^1.2.0",
    "koa-csrf": "^3.0.4",
    "koa-favicon": "^2.0.0",
    "koa-generic-session": "^1.11.3",
    "koa-helmet": "^2.0.0",
    "koa-onerror": "^2.0.0",
    "koa-passport": "^3.0.0-rc.1",
    "koa-ratelimit": "^2.3.0",
    "koa-redis": "^3.0.0",
    "koa-router": "^7.0.1",
    "koa-static": "^3.0.0",
    "koa-stylus": "0.0.3",
    "koa-views": "^5.0.2",
    "lodash": "^4.16.4",
    "mysql2": "^1.1.0",
    "passport-local": "^1.0.0",
    "pug": "^2.0.0-beta6",
    "redis": "^2.6.2",
    "stylus": "^0.54.5"
  },
  "devDependencies": {
    "@types/bcrypt": "0.0.30",
    "@types/bluebird": "^3.0.35",
    "@types/bunyan": "0.0.30",
    "@types/debug": "0.0.29",
    "@types/fs-extra": "0.0.33",
    "@types/knex": "0.0.35",
    "@types/koa": "^2.0.33",
    "@types/koa-bodyparser": "^3.0.20",
    "@types/koa-router": "^7.0.21",
    "@types/koa-static": "^2.0.21",
    "@types/lodash": "^4.14.37",
    "@types/passport-local": "^1.0.29",
    "@types/pug": "^2.0.2",
    "@types/redis": "^0.12.32",
    "eslint": "^3.7.0",
    "eslint-plugin-promise": "^2.0.0",
    "pre-commit": "^1.1.3"
  }
}
